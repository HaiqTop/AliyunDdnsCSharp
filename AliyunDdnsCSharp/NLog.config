<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off"
      internalLogFile="nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="debugPrefix"
            value="DEBUG" />
  <variable name="errorPrefix"
            value="ERROR" />
  <variable name="commonPrefix"
            value="INFO" />
  <variable name="logDirectory"
            value="${basedir}/Logs/${shortdate}" />
  <variable name="errorLayout"
            value=
                          "${longdate}|${level} : ┌──────
            ${newline}${longdate}|${level} : │Thread :${threadName} ${threadid}
            ${newline}${longdate}|${level} : ├┄┄┄┄┄┄┄
            ${newline}${longdate}|${level} : │${callsite:className=True:fileName=True:includeSourcePath=False:methodName=True}
            ${newline}${longdate}|${level} : │${stacktrace}
            ${newline}${longdate}|${level} : ├┄┄┄┄┄┄┄
            ${newline}${longdate}|${level} : │${message}
            ${newline}${longdate}|${level} : └────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────
            " />

  <variable name="normalLayout"
            value=
                          "${longdate}|${level} : ┌──────
            ${newline}${longdate}|${level} : │Thread :${threadName} ${threadid}
            ${newline}${longdate}|${level} : ├┄┄┄┄┄┄┄
            ${newline}${longdate}|${level} : │${callsite:className=True:fileName=True:includeSourcePath=False:methodName=True}
            ${newline}${longdate}|${level} : ├┄┄┄┄┄┄┄
            ${newline}${longdate}|${level} : │${message}
            ${newline}${longdate}|${level} : └──────
            " />
  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets async="true">

    <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->
    <!--debug log to console-->
    <target xsi:type="ColoredConsole"
            name="logToConsole"
            layout="${normalLayout}" />
    <!--debug log to file-->
    <target xsi:type="File"
            name="debugToFile"
            fileName="${logDirectory}/${debugPrefix}.LOG"
            keepFileOpen="true"
            layout="${normalLayout}" />
    <!--debug log to file-->
    <target xsi:type="File"
            name="logToFile"
            fileName="${logDirectory}/${commonPrefix}.LOG"
            keepFileOpen="true"
            layout="${normalLayout}" />
    <!--error log to file-->
    <target xsi:type="File"
            name="errToFile"
            fileName="${logDirectory}/${errorPrefix}.LOG"
            keepFileOpen="true"
            layout="${errorLayout}" />
    <!--
    Write events to a file with the date in the filename.
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    -->
  </targets>

  <rules>
    <!-- add your logging rules here -->
    <logger name="*"
            minlevel="Trace"
            writeTo="logToConsole"
            enabled="true" />
    <logger name="*"
            minlevel="Trace"
            writeTo="debugToFile"
            enabled="true" />
    <logger name="*"
            minlevel="Info"
            writeTo="logToFile"
            enabled="true" />
    <logger  name="*"
             minlevel="Error"
             writeTo="errToFile"
             enabled="true" />
    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
  </rules>
</nlog>